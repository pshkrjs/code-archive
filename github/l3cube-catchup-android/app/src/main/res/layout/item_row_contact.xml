<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <TextView
                android:textColor="#333"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Pushkaraj Shinde"
                android:id="@+id/tv_contact_list_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#333"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Pushkaraj Shinde"
                android:id="@+id/tv_contact_list_row_number"
                android:layout_below="@id/tv_contact_list_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:id="@+id/tv_contact_list_row_RSVP"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rl_contact_row_RSVP_btn"
                android:layout_centerVertical="true"
                android:padding="8dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="Yes"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_contact_list_row_RSVP_g"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="No"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_contact_list_row_RSVP_ng"
                    android:layout_toLeftOf="@id/btn_contact_list_row_RSVP_g"
                    android:layout_marginRight="8dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>